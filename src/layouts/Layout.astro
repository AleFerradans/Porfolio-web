---
import '@fontsource-variable/onest';
import '@fontsource/poppins';
import '@fontsource-variable/dm-sans';

interface Props {
	title: string;
	description: string
}
const { description, title } = Astro.props;

---

<!doctype html>

<html lang="es"> 

	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="public/letter-a.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<div class="absolute top-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		
		<main>
			<slot />
		</main>



		<script src="https://kit.fontawesome.com/70c8b821c7.js" crossorigin="anonymous"></script>
	</body>

</html>


<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Poppins", "Onest Variable", "dm-sans";
		user-select: none;
		scroll-behavior: smooth;
	}

	body{
		display: flex;
		justify-content: center;
		flex-direction: column;
		justify-content: center;
		background-color: #0E100F;
		
	}
	@media (prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
